{
    "files.exclude": {
      ".git/": true,
      "node_modules/": false,
      "dist/": false
    },
    "search.exclude": {
      "**/node_modules": true,
      "**/dist": true
    },

    // Personally I like 80 for readability but enforce 100
    "editor.rulers": [80, 100],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
  }
